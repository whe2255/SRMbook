@model SrmBook.Models.BookClassification

@{
    ViewData["Title"] = "Details";
    var Key = Context.Session.GetString("USER_TYPE_KEY");
}

<h1>세부 정보</h1>

<div>
    <h4>도서 분류</h4>
    <hr />
    <dl class="row">
         <dd>
                    @if (Model.BOOK_IMAGE != null)
                    {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.BOOK_IMAGE)" alt="Book Image"
                        style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                    <span>이미지가 없습니다</span>
                    }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_CLASS)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_CLASS)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_NAME)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_NAME)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_WRITER)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_WRITER)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PUBLISHER)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PUBLISHER)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_PRICE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_PRICE)
        </dd>
    </dl>
</div>
<div>
    @if (Key == "admin")
    {
        <a asp-action="Edit" asp-route-id="@Model?.BOOK_NUM">수정</a>
    }
    <a asp-action="Index">목록으로 돌아가기</a>
</div>
