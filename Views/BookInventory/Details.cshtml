@model SrmBook.Models.BookInventory

@{
    ViewData["Title"] = "Details";
    var Key = Context.Session.GetString("USER_TYPE_KEY");
}

<fieldset style="margin-top: 50px;">
    <legend>재고도서 세부정보</legend>
</fieldset>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_NUM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_NUM)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_CLASS)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_CLASS)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_NAME)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_NAME)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_WRITER)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_WRITER)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_PRICE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_PRICE)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_QUANTITY)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_QUANTITY)
        </dd>
    </dl>
</div>
<div>
    @if (Key == "admin")
    {
        <a class="btn btn-outline-light" asp-action="Edit" asp-route-id="@Model?.BOOK_NUM">재고 수정</a>
    }
    <a class="btn btn-outline-light" asp-action="Index">목록으로 돌아가기</a>
</div>
