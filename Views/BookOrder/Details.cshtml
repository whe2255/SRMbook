@model SrmBook.Models.BookOrder

@{
    ViewData["Title"] = "Details";
}


<fieldset style="margin-top: 50px;">
    <legend>발주 상세</legend>
</fieldset>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.USER_ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.USER_ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ORDER_DATE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ORDER_DATE)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_QUANTITY)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_QUANTITY)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TOTAL_PRICE)
        </dt>
        <dd class="col-sm-10">
            @{
                decimal totalPrice = Model.TOTAL_PRICE;
                int totalPriceInt = Decimal.ToInt32(totalPrice); // 소수점 값 제거
            }
            @totalPriceInt
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_NAME)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_NAME)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BOOK_NUM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BOOK_NUM)
        </dd>
    </dl>
</div>
<div>
     <a class="btn btn-outline-light" asp-action="Index">이전</a>
</div>
