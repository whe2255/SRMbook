@model SrmBook.Models.BookUser

<h2>Delete User</h2>

<div>
    <h4>User</h4>
    <hr />

    @using (Html.BeginForm("DeleteConfirmed", "BookUser", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.USER_NUM)
        <p>Are you sure you want to delete this user?</p>
        <input type="submit" value="DeleteConfirmed" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", "BookUser", null, new { @class = "btn btn-secondary" })
    }
</div>
