@model List<PurchaseRankingViewModel>
@{
    ViewData["Title"] = "SrmBook";
}

<div style="margin-top: 50px; text-align: center;" id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active"><img src="img\view.jpg" width="900" height="500" alt="..." /></div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span
            class="visually-hidden">Previous</span> </button> <button class="carousel-control-next" type="button"
        data-bs-target="#carouselExampleControls" data-bs-slide="next"> <span class="carousel-control-next-icon"
            aria-hidden="true"></span> <span class="visually-hidden">Next</span> </button>
</div>

<h3 style="margin-top: 50px; margin-left: 200px;">
  <small class="text-body-secondary">도서 발주 순위</small>
</h3>

<div style="margin-left: 200px; text-align: center; display: flex;">
<table class="table table-hover" style="width: 800px; height: 200px;">
    <thead>
        <tr class="table-dark">
            <th scope="row">순위</th>
            <th>도서명</th>
            <th>발주량</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @for (var i = 0; i < Model.Count && i < 3; i++)@* 3등까지 표시 *@
            {
                <tr class="table-dark">
                    <td scope="row">@(i + 1)</td>
                    <td>@Model[i].BOOK_NAME</td>
                    <td>@Model[i].TOTAL_QUANTITY</td>
                </tr>
            }
        }
        else
        {
            <tr class="table-dark">
                <td scope="row" colspan="3">발주 내역이 없습니다.</td>
            </tr>
        }
    </tbody>
</table>

